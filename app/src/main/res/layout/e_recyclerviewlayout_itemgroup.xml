<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#db9501"
    android:onClick="onParentClicked"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="10dp"
        >

        <ImageView
            android:id="@+id/arrow_expand_imageview"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_expand_button" />

        <TextView
            android:id="@+id/itemGroupName_xtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:text="ItemGroupNames"
            android:textColor="#fff"
            android:textSize="12sp"
            android:textStyle="bold" />


        <ImageButton

            android:id="@+id/button"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_plus_symbol"
            android:onClick="addItemClicked"
            android:textSize="12sp"
            />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_edit_pencil"
            android:onClick="onEditItemGroupClicked"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="change"
            android:textSize="12sp"


            />

        <ImageButton
            android:id="@+id/deleteItemGroup_xbtn"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_delete"
            android:onClick="deleteParentButtonClickedK"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"

            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
</LinearLayout>